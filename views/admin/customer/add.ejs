<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%=pageTitle%></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="javascript:void(0)"><%=moduleName%></a></li>
              <li class="breadcrumb-item active"><%=pageTitle%></li>
            </ol>
          </div>
        </div>
      </div>
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-primary card-outline">
              <div class="card-header d-flex p-0">
                <h3 class="card-title p-3">Customer Information</h3>
                <ul class="nav nav-pills ml-auto p-2">
                  <li class="nav-item"><a class="btn btn-block btn-secondary" href="<%=APPCONSTANT.ADMINCALLURL%>/manage_customer">Back</a></li>
                </ul>
              </div>
              <form role="form" id="addCustomerForm" method="post" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="form-row">
                      <div class="form-group col-md-4">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Enter Name">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="email">Email</label>
                        <input type="text" name="email" class="form-control" id="email" placeholder="Enter Email">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="mobile">Mobile Number</label>
                        <input type="text" name="mobile" class="form-control" id="mobile" placeholder="Enter Mobile Number">
                      </div>
                    </div>
                    <div class="card-header">
                      <h3 class="card-title">Billing Address</h3>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-4">
                        <label for="address">Address</label>
                        <input type="text" name="billingAddress" class="form-control" id="billingAddress" placeholder="Enter Billing Address">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="address">Country</label>
                        <input type="text" name="billingCountry" class="form-control" id="billingCountry" placeholder="Enter Billing Country">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="state">Select State</label>
                        <select name="billingState" class="form-control select2" id="billingState" onchange="getLocationFields(this.value, 'billingCity', 'get_city', 'Select City', 'get_pincode', 'billing')">
                          <option value="">Select State</option>
                        <% for(let i = 0; i < stateData.length; i++){ %>
                          <option value="<%=stateData[i].id%>"><%=stateData[i].name%></option>
                        <% } %>
                        </select>
                      </div>
                      <span id="billingCityData" class="locationFields col-md-4"></span>
                      <span id="billingPincodeData" class="locationFields col-md-4"></span>
                      <span id="billingAreaData" class="locationFields col-md-4"></span>
                      <span id="billingSocietyData" class="locationFields col-md-4"></span>
                      <span id="billingTowerData" class="locationFields col-md-4"></span>
                    </div>
                    <div class="card-header">
                      <h3 class="card-title">Shipping Address</h3>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-3">
                        <label for="sameAsBillingAddress">Same as Billing Address</label>
                        <input type="checkbox" name="sameAsBillingAddress" id="sameAsBillingAddress" class="form-control" style="margin-top: -24px;margin-left: 55px;">
                      </div>
                    </div>
                    <div class="form-row" id="shippingDiv">
                      <div class="form-group col-md-4">
                        <label for="address">Address</label>
                        <input type="text" name="shippingAddress" class="form-control" id="shippingAddress" placeholder="Enter Shipping Address">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="address">Country</label>
                        <input type="text" name="shippingCountry" class="form-control" id="shippingCountry" placeholder="Enter Shipping Country">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="state">Select State</label>
                        <select name="shippingState" class="form-control select2" id="shippingState" onchange="getLocationFields(this.value, 'shippingCity', 'get_city', 'Select City', 'get_pincode', 'shipping')">
                          <option value="">Select State</option>
                        <% for(let i = 0; i < stateData.length; i++){ %>
                          <option value="<%=stateData[i].id%>"><%=stateData[i].name%></option>
                        <% } %>
                        </select>
                      </div>
                      <span id="shippingCityData" class="locationFields col-md-4"></span>
                      <span id="shippingPincodeData" class="locationFields col-md-4"></span>
                      <span id="shippingAreaData" class="locationFields col-md-4"></span>
                      <span id="shippingSocietyData" class="locationFields col-md-4"></span>
                      <span id="shippingTowerData" class="locationFields col-md-4"></span>
                    </div>
                    </div>
                  </div>
                </div>    
                <div class="card-footer">
                  <a href="<%=APPCONSTANT.ADMINCALLURL%>/manage_customer" class="btn btn-default">Cancel</a>
                  <button type="submit" class="btn btn-primary add_button">Submit</button>
                </div>
              </form>
            </div>
          </div>
          <div class="col-md-6">
  
          </div>
        </div>
      </div>
    </section>
  </div>
<script>
  $('#sameAsBillingAddress').change(function(){
    if (this.checked) {
      $('#shippingDiv').slideUp();
    }else {
      $('#shippingDiv').slideDown();
    }
  });
</script>