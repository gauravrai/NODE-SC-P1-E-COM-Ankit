
<div class="login-box">
    <div class="login-logo">
        <a href="javascript:void(0)"><b>Soft</b>Chilli</a>
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <%if(detail.message){
                var message = detail.message?detail.message:[]
                if(message.length>0){
            %>
            <div class="alert alert-danger alert-dismissible">
                <%=message[0].msg%>
            </div>
            <%}}%>
            <form method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Username" name="username" value="<%=COOKIE.username%>">
                    <div class="input-group-append">
                        <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="Password" name="password" value="<%=COOKIE.password%>">
                    <div class="input-group-append">
                        <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <!--<div class="icheck-primary">
                        <input type="checkbox" name="remember_me" value='1'
                        <%=COOKIE.username ? 'checked' :''%>>
                        <label for="remember">
                            Remember Me
                        </label>
                        </div>-->
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </div>
            </form>

            <p class="mb-1">
