<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%=pageTitle%></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="javascript:void(0)"><%=moduleName%></a></li>
              <li class="breadcrumb-item active"><%=pageTitle%></li>
            </ol>
          </div>
        </div>
      </div>
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-primary card-outline">
              <div class="card-header d-flex p-0">
                <h3 class="card-title p-3"><%=pageTitle%></h3>
                <ul class="nav nav-pills ml-auto p-2">
                  <li class="nav-item"><a class="btn btn-block btn-danger" href="<%=APPCONSTANT.ADMINCALLURL%>/export_order<%=filterData%>" target="_blank">Export</a></li>&nbsp;&nbsp;
                  <% if(permissionData.add == '1'){ %>
                  <li class="nav-item"><a class="btn btn-block btn-primary" href="<%=APPCONSTANT.ADMINCALLURL%>/add_order">Add New Order</a></li>
                  <% } %>
                </ul>
              </div>
              <div class="card-header d-flex" id="searchHead">
                <h4> Search...</h4>
                <ul class="nav nav-pills ml-auto p-2">
                  <li class="nav-item"><i class="fas fa-search" id="global_search"> </i></li>
                </ul>
              </div>
              <div  class="card-header" id="searchBox" style="display: none !important;">
                <form method="GET">
                  <div class="row">
                    <div class="col-sm-9">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search for order id, customer name, customer mobile number or address" name="search_data" id="search_data" value="<%= req.query.search_data ? req.query.search_data : ''%>" />
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                          <select name="order_status" id="order_status" class="form-control" onchange="this.form.submit()">
                            <option value="">Select Order Status</option>
                            <% for(let i = 0; i < orderStatus.length; i++){ %>
                              <option value="<%=orderStatus[i]%>" <% if(req.query.order_status== orderStatus[i]){ %>
                                selected="selected" <% } %>><%=orderStatus[i]%></option>
                            <% } %>
                          </select>
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                        <input type="date" name="date_from" class="form-control" id="date_from" placeholder="(YYYY-MM-DD) From Date" value="<%= req.query.date_from ? req.query.date_from : ''%>">
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                        <input type="date" name="date_to" class="form-control" id="date_to" placeholder="(YYYY-MM-DD) To Date" value="<%= req.query.date_to ? req.query.date_to : ''%>">
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                          <select name="order_from" id="order_from" class="form-control" onchange="this.form.submit()">
                            <option value="">Select Order From</option>
                            <option value="ADMIN"<% if(req.param("order_from")=="ADMIN"){%>selected="selected" <%} %> >ADMIN</option>
                            <option value="APP"<% if(req.param("order_from")=="APP"){%>selected="selected" <%} %> >APP</option>
                            <option value="WEBSITE"<% if(req.param("order_from")=="WEBSITE"){%>selected="selected" <%} %> >WEBSITE</option>
                          </select>
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <a href="<%=APPCONSTANT.ADMINCALLURL%>/manage_order" class="btn btn-default">Cancel</a>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <div class="card-body">
                <%- include ('../message/message') -%>
                <table id="orderTable" class="table table-striped table-bordered" style="width:100%">
                  <thead>
                      <tr>
                        <th>Order Id</th>
                        <th>Customer Name</th>
                        <th>Mobile Number</th>
                        <th>Address</th>
                        <th>Order Amount</th>
                        <th>Order Status</th>
                        <th>Order From</th>
                        <th>Created date</th>
                        <th>Action</th>
                      </tr>
                  </thead>
                  <tfoot>
                      <tr>
                        <th>Order Id</th>
                        <th>Customer Name</th>
                        <th>Mobile Number</th>
                        <th>Address</th>
                        <th>Order Amount</th>
                        <th>Order Status</th>
                        <th>Order From</th>
                        <th>Created date</th>
                        <th>Action</th>
                      </tr>
                  </tfoot>
              </table>
              </div>
            </div>
          </div>
          <div class="col-md-6">
  
          </div>
        </div>
      </div>
    </section>
  </div>